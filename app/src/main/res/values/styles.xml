<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================= BASE APPLICATION THEME ================= -->

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_green</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_green_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- ================= CARD STYLES ================= -->

    <!-- Estilo base para tarjetas -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Enhanced Card Styles -->
    <style name="CardStyleWithShadow" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardMaxElevation">12dp</item>
    </style>

    <!-- ================= BUTTON STYLES ================= -->

    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/button_primary</item>
        <item name="android:textColor">@color/button_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonDanger" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Login Button Styles -->
    <style name="LoginButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/primary_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Social Login Button Styles -->
    <style name="SocialButtonGoogle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/border_medium</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SocialButtonFacebook" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/facebook_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ================= TEXT INPUT STYLES ================= -->

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="boxStrokeColor">@color/border_medium</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Form Input Enhanced Styles -->
    <style name="TextInputLayoutEnhanced" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="boxStrokeColor">@color/border_medium</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!-- ================= BOTTOM NAVIGATION STYLES ================= -->

    <style name="BottomNavigationTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/nav_selected</item>
    </style>

    <style name="BottomNavigationTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/nav_unselected</item>
    </style>

    <!-- ================= ALERT DIALOG STYLES ================= -->

    <style name="AlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonNegative</item>
    </style>

    <style name="AlertDialogButtonPositive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogButtonNegative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- ================= TEXT VIEW STYLES ================= -->

    <style name="TextViewTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextViewSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TextViewAmount">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TextViewAmountIncome" parent="TextViewAmount">
        <item name="android:textColor">@color/income_green</item>
    </style>

    <style name="TextViewAmountExpense" parent="TextViewAmount">
        <item name="android:textColor">@color/expense_red</item>
    </style>

    <!-- ================= FLOATING ACTION BUTTON ================= -->

    <style name="FABStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- ================= TOOLBAR STYLES ================= -->

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_green</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/light_green</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Toolbar Enhanced Styles -->
    <style name="ToolbarEnhanced" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/header_gradient_background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/light_green</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- ================= DATE PICKER DIALOG ================= -->

    <style name="DatePickerDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorAccent">@color/secondary_green</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <!-- ================= EMPTY STATE STYLES ================= -->

    <style name="EmptyStateText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="EmptyStateDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- ================= LIST ITEM STYLES ================= -->

    <style name="ListItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- ================= AMOUNT DISPLAY STYLES ================= -->

    <style name="AmountTextLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AmountTextMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AmountTextSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Income Amount Styles -->
    <style name="AmountIncomeXLarge" parent="AmountTextLarge">
        <item name="android:textColor">@color/income_green</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AmountIncomeLarge" parent="AmountTextLarge">
        <item name="android:textColor">@color/income_green</item>
    </style>

    <style name="AmountIncomeMedium" parent="AmountTextMedium">
        <item name="android:textColor">@color/income_green</item>
    </style>

    <!-- Expense Amount Styles -->
    <style name="AmountExpenseXLarge" parent="AmountTextLarge">
        <item name="android:textColor">@color/expense_red</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AmountExpenseLarge" parent="AmountTextLarge">
        <item name="android:textColor">@color/expense_red</item>
    </style>

    <style name="AmountExpenseMedium" parent="AmountTextMedium">
        <item name="android:textColor">@color/expense_red</item>
    </style>

    <!-- Balance Amount Styles -->
    <style name="AmountBalancePositive" parent="AmountTextLarge">
        <item name="android:textColor">@color/income_green</item>
    </style>

    <style name="AmountBalanceNegative" parent="AmountTextLarge">
        <item name="android:textColor">@color/expense_red</item>
    </style>

    <style name="AmountBalanceNeutral" parent="AmountTextLarge">
        <item name="android:textColor">@color/balance_blue</item>
    </style>

    <!-- ================= HEADER STYLES ================= -->

    <style name="HeaderTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeaderSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- ================= ADDITIONAL STYLES ================= -->

    <style name="ChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/light_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="chipStrokeColor">@color/border_medium</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBarGreen">
        <item name="android:indeterminateTint">@color/primary_green</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/border_light</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="IconButtonPrimary">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/circle_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="SummaryCardContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/summary_card_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="itemIconTint">@color/primary_green</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="LoadingContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/semi_transparent_white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">32dp</item>
    </style>

    <style name="ErrorStateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SuccessStateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/success</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ChartContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>